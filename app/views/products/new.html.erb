<h1>Creating new product</h1>

<%= @product.errors.full_messages.join("").html_safe %>

<%= form_for @product do |f| %>

<div>
<br>
<%= f.label :title %>
<%= f.text_field :title %>
</div>

<div>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
</div>

<div>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>

</div>

<br>
<div>
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>
<br>

  <%= f.submit %>

<% end %>
